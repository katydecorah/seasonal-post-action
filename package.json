{
  "name": "seasonal-post-action",
  "version": "6.2.1",
  "description": "A GitHub action that creates a seasonal post from data files.",
  "main": "dist/index.js",
  "scripts": {
    "pretest": "npm run copy-templates && eslint . --ext .js,.ts",
    "test": "jest --coverage",
    "copy-templates": "cpy src/template.md .github/actions/ --flat --rename seasonal-post-template.md",
    "build": "ncc build src/index.ts && npm run copy-templates"
  },
  "author": "Katy DeCorah",
  "license": "MIT",
  "devDependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@babel/preset-env": "^7.23.9",
    "@babel/preset-typescript": "^7.23.3",
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.17",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "@vercel/ncc": "^0.38.1",
    "cpy-cli": "^5.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "octokit": "^3.1.2",
    "prettier": "^3.2.5",
    "prettier-2": "npm:prettier@2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/katydecorah/seasonal-post-action.git"
  },
  "keywords": [
    "github-actions"
  ],
  "bugs": {
    "url": "https://github.com/katydecorah/seasonal-post-action/issues"
  },
  "homepage": "https://github.com/katydecorah/seasonal-post-action#readme",
  "dependencies": {
    "liquidjs": "^10.10.0"
  }
}
