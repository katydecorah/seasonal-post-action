{
  "name": "seasonal-post-action",
  "version": "3.0.0",
  "description": "A GitHub action that creates a seasonal Jekyll post from data files",
  "main": "dist/index.js",
  "scripts": {
    "pretest": "eslint . --ext .js,.ts",
    "test": "jest --coverage",
    "pretty-quick": "pretty-quick",
    "build": "ncc build src/index.ts",
    "prepare": "husky install"
  },
  "author": "Katy DeCorah",
  "license": "MIT",
  "devDependencies": {
    "@actions/core": "^1.6.0",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@types/jest": "^27.4.0",
    "@types/js-yaml": "^4.0.5",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "@vercel/ncc": "^0.33.1",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "js-yaml": "^4.1.0",
    "octokit": "^1.7.1",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3",
    "typescript": "^4.5.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/katydecorah/seasonal-post-action.git"
  },
  "keywords": [
    "github-actions"
  ],
  "bugs": {
    "url": "https://github.com/katydecorah/seasonal-post-action/issues"
  },
  "homepage": "https://github.com/katydecorah/seasonal-post-action#readme",
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  }
}
