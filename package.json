{
  "name": "seasonal-post-action",
  "version": "6.0.1",
  "description": "A GitHub action that creates a seasonal post from data files.",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "pretest": "eslint . --ext .js,.ts",
    "test": "jest --coverage",
    "pretty-quick": "pretty-quick",
    "build": "ncc build src/index.ts && cpy src/template.md .github/actions/ --flat --rename seasonal-post-template.md",
    "prepare": "husky install"
  },
  "author": "Katy DeCorah",
  "license": "MIT",
  "devDependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1",
    "@babel/preset-env": "^7.21.4",
    "@babel/preset-typescript": "^7.21.4",
    "@types/jest": "^29.5.1",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^18.16.1",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vercel/ncc": "^0.36.1",
    "cpy-cli": "^4.2.0",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "js-yaml": "^4.1.0",
    "octokit": "^2.0.14",
    "prettier": "^2.8.8",
    "pretty-quick": "^3.1.3",
    "typescript": "^5.0.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/katydecorah/seasonal-post-action.git"
  },
  "keywords": [
    "github-actions"
  ],
  "bugs": {
    "url": "https://github.com/katydecorah/seasonal-post-action/issues"
  },
  "homepage": "https://github.com/katydecorah/seasonal-post-action#readme",
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  }
}
